.container
  .row
    .span14
      %a.xlarge{:href => ""}= "@#{@profile.name}"
  .row
    .span14
      %br
      %img{:src => url("/images/#{@profile.icon}"), :width => "32"}
  %br
  .row
    .span14
      %a.gauge{:href => url("users/#{@profile.name}/followers")}
        %div.value= @info[:followers]
        %div.key followers
      %a.gauge{:href => url("users/#{@profile.name}/following")}
        %div.value= @info[:follows]
        %div.key following
      %a.gauge{:href => ""}
        %div.value= @info[:completed]
        %div.key completed
  %br
  .row 
    .span14
      - if @user.nil? or @profile.id == @user.id
        %button.btn.btn-large.disabled{:disabled => "disabled"} follow
      - elsif @user.is_following(@profile.id)
        %button.btn.btn-large{:onclick => "unfollow(#{@profile.id}); return false;"} unfollow
      - else
        %button.btn.btn-large{:onclick => "follow(#{@profile.id}); return false;"} follow

