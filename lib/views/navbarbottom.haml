.navbar.navbar-default.navbar-fixed-bottom
  .navbar-inner
    .container
      %a.navbar-brand{:href => "/"}
        getsdone.io
        %sup alpha
      %ul.nav.navbar-nav
        %li
          %a{:href => "/home"} home
        %li
          %a{:href => "/blog"} blog
        %Li
          %a{:href => "/company"} company
        %li
          %a{:href => "/privacy"} privacy
        %li
          %a{:href => "/terms"} terms
        %li
          %a{:href => "/help"} help
        %li
          %a{:href => "/about"} about
      %form.navbar-form.navbar-right
        - if @user.nil?
          - if @loginpage.nil?
            %button.btn.btn-success{:onclick => "goto('/login'); return false;"} login
          %button.btn.btn-primary{:onclick => "goto('/signup'); return false;"} signup
        - else
          %button.btn.btn-success{:onclick => "logout(); return false;"} logout

